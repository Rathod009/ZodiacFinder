<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_main"
    android:orientation="vertical"
    tools:context=".ZodiacDetails">


    <TextView
        android:id="@+id/sign"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Virago"
        android:textSize="60sp"
        android:fontFamily="@font/zdykcancer"
        android:gravity="center"
        android:layout_weight="2"
        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="2"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_weight="6"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antipasto"
            android:text="Sign Lord"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/signLord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antipasto"
            android:text="Sign Lord"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:padding="5dp"
            android:background="@color/red_dark"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center_horizontal"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antipasto"
            android:text="Naksahtra"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/naksahtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antipasto"
            android:text="Naksahtra"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:background="@color/red_dark"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antipasto"
            android:text="Varna"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/varna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antipasto"
            android:text="Varna"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:background="@color/red_dark"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antipasto"
            android:text="Tithi"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tithi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antipasto"
            android:text="Tithi"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:background="@color/red_dark"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center_horizontal"
            />

    </GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_margin="20dp"
        android:fontFamily="@font/antipasto"
        android:textColor="@color/grey"
        android:textSize="17sp"
        android:layout_gravity="center"/>




</LinearLayout>